<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:actionBarSize">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@color/main_color"
                android:text="@string/pin"
                android:textColor="@color/homescreen_text_color"
                android:id="@+id/pin_find"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:elevation="2dp"
                android:layout_marginBottom="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/signal_red"
                android:text="@string/clear"
                android:textColor="@color/homescreen_text_color"
                android:id="@+id/clear_pos"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:elevation="2dp"
                android:layout_marginBottom="5dp"
                android:onClick="onClearPos" />
            </LinearLayout>

        <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout"
                android:id="@+id/map_show"
                android:elevation="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:name="com.google.android.gms.maps.MapFragment"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:elevation="8dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/relativeLayout_map"
            android:padding="0dp"
            android:visibility="visible"
            android:background="@drawable/round_button"
            android:outlineProvider="background">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/openMaps"
                android:elevation="0dp"
                android:clickable="true"
                android:onClick="onOpenMaps"
                android:contentDescription="openMaps"
                android:src="@drawable/openmaps"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:background="@drawable/round_button"
                android:outlineProvider="background"
                android:visibility="gone"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp" />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>